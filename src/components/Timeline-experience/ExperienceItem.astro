---
import type { Experience } from "src/interfaces/experience.interface";

interface ExperienceItemProps extends Experience {
  isLeft: boolean;
}

const props = Astro.props as ExperienceItemProps;
const alignmentClass = props.isLeft ? "timeline-start mb-10 md:text-end timeline-box bg-zinc-700" : "timeline-end md:mb-10 timeline-box bg-zinc-700";
---
<li>
  <div class="timeline-middle">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 20 20"
      fill="currentColor"
      class="h-5 w-5">
      <path
        fill-rule="evenodd"
        d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z"
        clip-rule="evenodd" />
    </svg>
  </div>
  <div class={alignmentClass}>
    <time class="font-mono italic">{props.duration}</time>
    <div class="text-lg font-black">{props.position}</div>
    <div class="font-semibold">{props.company}</div>
    <ul class="list-disc list-inside mt-2 text-sm">
      {props.description.map((item) => (
        <li>{item}</li>
      ))}
    </ul>
  </div>
  <hr class="bg-zinc-600" />
</li>
